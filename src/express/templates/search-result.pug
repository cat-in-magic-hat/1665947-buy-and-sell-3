extends layout.pug

block content
    main.page-content
        section.search-results
            h1.visually-hidden Результаты поиска
            .search-results__wrapper
                if searchResult && searchResult.length
                    p.search-results__label
                        | Найдено 
                        span.js-results
                            =searchResult.length 
                            |  публикации
                    ul.search-results__list
                        each item in searchResult
                            li.search-results__item
                                include ./tickets/ticket-card.pug
                else 
                    .search-results__message
                        p
                            | Не найдено
                            br
                            | ни одной публикации
        if newOffers
            - var ticketsList = newOffers;
            include ./tickets/tickets-list.pug
    