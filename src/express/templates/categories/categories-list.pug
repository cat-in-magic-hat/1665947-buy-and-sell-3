section.categories-list
    h1.visually-hidden Сервис объявлений "Куплю - продам"
    ul.categories-list__wrapper
        each category in categories
            li.categories-list__item
                a.category-tile(href='#')
                    span.category-tile__image
                        img(src=category.image srcset=category.imageAlternative alt='Иконка категории')
                    span.category-tile__label
                        =category.title
                        | 
                        span.category-tile__qty.js-qty
                            =category.quantity